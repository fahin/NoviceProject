
@{
    ViewBag.Title = "MedicineSetup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form class="form-horizontal">
    <div class="form-group">
        <label for="name" class="col-sm-2 control-label">Medicine Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="name" id="name" placeholder="Medicine Name">
        </div>
    </div>
    <div class="form-group">
        <label for="power" class="col-sm-2 control-label">Power</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="power" id="power" placeholder="Power">

            <select id="mgml">
                <option>--Select---</option>
                <option>mg</option>
                <option>ml</option>

            </select>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button onclick=" appendText() ">Add</button>
        </div>
    </div>
</form>
@section Scripts {
    <script>
        function appendText() {
            var name = $("#name").val();
            var mgml = $("#power").val() +"-"+ $("#mgml").val();

            var mydata = { Name: name, Power: mgml };
            $.ajax({
                type: "POST",
                url: '@Url.Action("MedicinceSave", "Medicine")',
                contentType: "application/json; charset=utf-8",
                data: JSON.stringify(mydata),
                dataType: "json",
                success: function(data) {

                }
            });
            return false;
        }

    </script>

}